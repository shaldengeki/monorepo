    name = "tailwindcss",
    srcs = [
        "App.src.css",
        ":App",
        "//:node_modules/tailwindcss",
        "//mc_manager/frontend:tailwindconfig",
    ],
    outs = [
        "App.css",
    ],
    args = [
        "--config mc_manager/frontend/tailwind.config.js",
        "-i mc_manager/frontend/src/App.src.css",
        "-o mc_manager/frontend/src/App.css",
    ],
    log_level = "debug",
    visibility = ["//mc_manager/frontend:__subpackages__"],

load("@rules_buf//buf:defs.bzl", "buf_lint_test")
load("@rules_go//proto:def.bzl", "go_proto_library")
load("@rules_proto//proto:defs.bzl", "proto_library")

filegroup(
    name = "all_protos",
    srcs = glob(["*.proto"]),
    visibility = ["//visibility:public"],
)

proto_library(
    name = "resources_proto",
    srcs = [
        "empty.proto",
        "single_message.proto",
    ],
    visibility = ["//visibility:public"],
)

proto_library(
    name = "empty_proto",
    srcs = ["empty.proto"],
    visibility = ["//visibility:public"],
)

proto_library(
    name = "single_message_proto",
    srcs = ["single_message.proto"],
    visibility = ["//visibility:public"],
)

go_proto_library(
    name = "resources_go_proto",
    importpath = "github.com/shaldengeki/monorepo/py_proto/test/resources",
    protos = [
        ":empty_proto",
        ":single_message_proto",
    ],
    visibility = ["//visibility:public"],
)

buf_lint_test(
    name = "empty_proto_lint",
    config = "//:buf.yaml",
    tags = ["manual"],
    targets = [":empty_proto"],
)

buf_lint_test(
    name = "single_message_proto_lint",
    config = "//:buf.yaml",
    tags = ["manual"],
    targets = [":single_message_proto"],
)
